# Admin Dashboard Environment Variables
# Copy this file to .env.local for local development

# Application
NEXT_PUBLIC_APP_NAME=IOC Admin Dashboard
NEXT_PUBLIC_APP_URL=http://localhost:3001
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
API_BASE_URL=http://localhost:3001

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Authentication
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your_nextauth_secret
ADMIN_ACCESS_CODE=your_admin_access_code

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ioc_admin

# Admin Features
ENABLE_USER_MANAGEMENT=true
ENABLE_SYSTEM_MONITORING=true
ENABLE_DATABASE_CONSOLE=true
ENABLE_LOG_VIEWER=true

# Monitoring
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_key
LOG_LEVEL=debug

# Email
ADMIN_EMAIL_ALERTS=admin@iocframework.com
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key

# Security
ADMIN_IP_WHITELIST=
RATE_LIMIT_ADMIN=100
SESSION_TIMEOUT=3600

# Deployment
VERCEL_URL=
VERCEL_ENV=development