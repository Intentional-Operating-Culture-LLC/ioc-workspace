{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@ioc/ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@ioc/ui/*": [
        "../../packages/ui/src/components/*"
      ],
      "@ioc/lib": [
        "../../packages/lib/src/index.ts"
      ],
      "@ioc/lib/*": [
        "../../packages/lib/src/*"
      ],
      "@ioc/types": [
        "../../packages/types/src/index.ts"
      ],
      "@ioc/types/*": [
        "../../packages/types/src/*"
      ]
    },
    "target": "ES2022"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "infrastructure/**/*",
    "archive/**/*",
    "refactoring/**/*",
    "testing/**/*",
    "terraform/**/*",
    "ioc-v3.1.1/**/*",
    "business/**/*",
    "tools/**/*",
    "scripts/**/*",
    "packages/ui/**/*"
  ]
}
