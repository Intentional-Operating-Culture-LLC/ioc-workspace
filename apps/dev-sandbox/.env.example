# Dev Sandbox Environment Variables
# Copy this file to .env.local for local development

# Application
NEXT_PUBLIC_APP_NAME=IOC Developer Tools
NEXT_PUBLIC_APP_URL=http://localhost:3010
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3010/api
API_BASE_URL=http://localhost:3010

# Development Tools
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true

# Mock Services
USE_MOCK_API=false
USE_MOCK_DATABASE=false
USE_MOCK_AUTH=false

# Database (Development)
DATABASE_URL=postgresql://user:password@localhost:5432/ioc_dev
ENABLE_DATABASE_LOGGING=true
ENABLE_QUERY_PROFILING=true

# Code Generation
ENABLE_CODE_GENERATION=true
TEMPLATE_PATH=./templates
OUTPUT_PATH=./generated

# Testing
ENABLE_TEST_UTILITIES=true
ENABLE_FIXTURE_GENERATION=true
ENABLE_API_MOCKING=true

# Documentation
ENABLE_API_DOCS=true
ENABLE_COMPONENT_DOCS=true
STORYBOOK_URL=http://localhost:6006

# Development Features
ENABLE_PLAYGROUND=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_DATABASE_VIEWER=true
ENABLE_LOG_STREAMING=true

# Performance
ANALYZE_BUNDLE=true
PROFILE_BUILDS=true
MEASURE_WEBPACK_SPEED=true

# Docker
DOCKER_REGISTRY=localhost:5000
DOCKER_IMAGE_TAG=latest

# Deployment
VERCEL_URL=
VERCEL_ENV=development